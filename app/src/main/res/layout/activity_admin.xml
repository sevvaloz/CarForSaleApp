<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AdminActivity">

    <Button
        android:id="@+id/toModelButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:text="ADD CAR MODEL">
    </Button>
    <Button
        android:id="@+id/toBrandButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:text="ADD CAR BRAND"
        android:layout_below="@+id/toModelButton">
    </Button>
    <Button
        android:id="@+id/toTypeButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:text="ADD CAR TYPE"
        android:layout_below="@+id/toBrandButton">
    </Button>



</RelativeLayout>